<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <!-- ImageView for displaying the product image -->
    <ImageView
        android:id="@+id/product_image_single_lay"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/image" />

    <!-- TextView for displaying the product name -->
    <TextView
        android:id="@+id/product_name_single_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Product Name"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- TextView for displaying the product description -->
    <TextView
        android:id="@+id/product_description_single_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Product Description"
        android:textSize="16sp" />

    <!-- TextView for displaying the product price -->
    <TextView
        android:id="@+id/product_price_single_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:text="Price: $0.00"
        android:textSize="16sp" />

    <!-- TextView for indicating if the product is purchased or not -->
    <CheckBox
        android:id="@+id/product_purchase_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Purchased"
        android:paddingTop="8dp"/>

</LinearLayout>